{
  "python.formatting.provider": "yapf",
  "rust-analyzer.cargo.target": "riscv64gc-unknown-none-elf",
  "rust-analyzer.files.excludeDirs": [
    // this project using the `clap` which does not support `riscv64gc-unknown-none-elf`
    "easy-fs-fuse",
    "_easy-fs-fuse",
    "storage_code",
    "*/.cargo/*"
  ],
  "rust-analyzer.checkOnSave.allTargets": false,
  "python.analysis.typeCheckingMode": "basic",
  "cSpell.words": [
    "alltraps",
    "bitflags",
    "dealloc",
    "Deque",
    "ebss",
    "ekernel",
    "getchar",
    "idxs",
    "kstack",
    "mtvec",
    "noreturn",
    "putchar",
    "repr",
    "riscv",
    "rodata",
    "satp",
    "sbss",
    "scause",
    "sepc",
    "sfence",
    "sstatus",
    "stie",
    "stimer",
    "stval",
    "stvec",
    "syscall",
    "syscalls",
    "unmap",
    "unmapping",
    "usec",
    "Virt",
    "xstate"
  ],
  "rust-analyzer.showUnlinkedFileNotification": false,
}